<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="10dp"
    android:background="@drawable/dialog_background_drawable">

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_baseline_close_24"
        app:tint="@color/pin_grey"/>

    <TextView
        android:id="@+id/item_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/all_used_ask"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"
        android:text="(해당 아이템은 영양소 통계에 활용되며,\n아이템의 상세 정보는 폐기됩니다.)"
        android:textSize="14sp"
        android:textColor="@color/text_small_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/all_used_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.3"
            android:text="모두 먹음"
            android:textStyle="bold"
            app:backgroundTint="@color/yellow" />


        <Button
            android:id="@+id/use_portion_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:text="1회분 사용"
            android:textStyle="bold"
            app:backgroundTint="@color/light_grey" />
    </LinearLayout>



</LinearLayout>
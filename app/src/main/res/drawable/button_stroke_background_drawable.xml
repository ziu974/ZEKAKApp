<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/portion_bar_item"/>
            <stroke
                android:color="@color/navy"
                android:width="3dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item
        android:state_pressed="false">
        <shape>
            <stroke
                android:color="@color/navy"
                android:width="3dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>